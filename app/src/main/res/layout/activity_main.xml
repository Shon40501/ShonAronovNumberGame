<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Edit1"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Answer"
        android:inputType="numberDecimal"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv4"
        app:layout_constraintStart_toStartOf="@+id/tv4"
        app:layout_constraintTop_toBottomOf="@+id/tv4" />

    <ImageView
        android:id="@+id/correct1"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/Edit1"
        app:layout_constraintStart_toStartOf="@+id/Edit1"
        app:layout_constraintTop_toBottomOf="@+id/Edit1"
        app:srcCompat="@drawable/shoncorrect" />

    <ImageView
        android:id="@+id/Correct2"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/Edit2"
        app:layout_constraintStart_toStartOf="@+id/Edit2"
        app:layout_constraintTop_toBottomOf="@+id/Edit2"
        app:srcCompat="@drawable/shoncorrect" />

    <ImageView
        android:id="@+id/Correct3"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/Edit3"
        app:layout_constraintStart_toStartOf="@+id/Edit3"
        app:layout_constraintTop_toBottomOf="@+id/Edit3"
        app:srcCompat="@drawable/shoncorrect" />

    <ImageView
        android:id="@+id/Wrong1"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/Edit1"
        app:layout_constraintStart_toStartOf="@+id/Edit1"
        app:layout_constraintTop_toBottomOf="@+id/Edit1"
        app:srcCompat="@drawable/shonwrong" />

    <EditText
        android:id="@+id/Edit2"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Answer"
        android:inputType="number"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv5"
        app:layout_constraintStart_toStartOf="@+id/tv5"
        app:layout_constraintTop_toBottomOf="@+id/tv5" />

    <EditText
        android:id="@+id/Edit3"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Answer"
        android:inputType="number"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv6"
        app:layout_constraintStart_toStartOf="@+id/tv6"
        app:layout_constraintTop_toBottomOf="@+id/tv6" />

    <ImageView
        android:id="@+id/Wrong2"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/Edit2"
        app:layout_constraintStart_toStartOf="@+id/Edit2"
        app:layout_constraintTop_toBottomOf="@+id/Edit2"
        app:srcCompat="@drawable/shonwrong" />

    <ImageView
        android:id="@+id/Wrong3"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/Edit3"
        app:layout_constraintStart_toStartOf="@+id/Edit3"
        app:layout_constraintTop_toBottomOf="@+id/Edit3"
        app:srcCompat="@drawable/shonwrong" />

    <Button
        android:id="@+id/Button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="b1"
        android:text="check"
        app:layout_constraintEnd_toEndOf="@+id/correct1"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="@+id/correct1"
        app:layout_constraintTop_toBottomOf="@+id/correct1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="b2"
        android:text="check"
        app:layout_constraintEnd_toEndOf="@+id/Correct2"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="@+id/Correct2"
        app:layout_constraintTop_toBottomOf="@+id/Wrong2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="b3"
        android:text="check"
        app:layout_constraintEnd_toEndOf="@+id/Correct3"
        app:layout_constraintStart_toStartOf="@+id/Correct3"
        app:layout_constraintTop_toBottomOf="@+id/Correct3" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/Answer1"
        app:layout_constraintStart_toStartOf="@+id/Answer1"
        app:layout_constraintTop_toBottomOf="@+id/Answer1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/Answer2"
        app:layout_constraintStart_toStartOf="@+id/Answer2"
        app:layout_constraintTop_toBottomOf="@+id/Answer2" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/Answer3"
        app:layout_constraintStart_toStartOf="@+id/Answer3"
        app:layout_constraintTop_toBottomOf="@+id/Answer3" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tv1"
        app:layout_constraintStart_toStartOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tv2"
        app:layout_constraintStart_toStartOf="@+id/tv2"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/tv3"
        app:layout_constraintStart_toStartOf="@+id/tv3"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

    <Button
        android:id="@+id/ButtonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:onClick="Next"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="@+id/Correct3"
        app:layout_constraintStart_toStartOf="@+id/correct1"
        app:layout_constraintTop_toBottomOf="@+id/Wrong2" />

    <TextView
        android:id="@+id/Answer1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/Answer2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Answer3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Answer2"
        app:layout_constraintTop_toTopOf="@+id/Answer1" />

    <TextView
        android:id="@+id/Answer2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintEnd_toStartOf="@+id/Answer3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Answer1"
        app:layout_constraintTop_toTopOf="@+id/Answer1" />

</androidx.constraintlayout.widget.ConstraintLayout>